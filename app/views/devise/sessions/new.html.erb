<div
  class="h-[100vh] flex justify-center items-center relative py-16 bg-gradient-to-br from-sky-50 to-gray-200"
>
  <div
    class="max-w-md p-8 mx-auto px-5 py-12 min-w-[360px] lg:px-12 lg:min-w-[400px] rounded-xl bg-white shadow-xl"
  >
    <div
      class="flex flex-col w-full my-6 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0"
    >
      <h2
        class="mt-6 text-3xl font-extrabold text-neutral-600 text-center"
      >
        Iniciar sesi√≥n
      </h2>

      <%= form_for(resource, as: resource_name, url:
      session_path(resource_name), html: { class: "mt-6" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "text-gray-500 mb-2"%>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          placeholder: "Your Email", class:"block w-full px-5 py-3 text-base
          text-neutral-600 placeholder-gray-300 transition duration-500
          ease-in-out transform border border-transparent rounded-lg bg-gray-50
          focus:outline-none focus:border-transparent focus:ring-2
          focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>
      </div>

      <div class="my-5" class="space-y-1">
        <%= f.label :password, class: 'text-gray-500 mb-2' %>
        <div class="mt-1">
          <%= f.password_field :password, autocomplete: "current-password",
          placeholder: "Your password", class:"block w-full px-5 py-3 text-base
          text-neutral-600 placeholder-gray-300 transition duration-500
          ease-in-out transform border border-transparent rounded-lg bg-gray-50
          focus:outline-none focus:border-transparent focus:ring-2
          focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="my-5">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, class:
        'text-gray-500 mb-2' %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"w-full px-4 py-2 tracking-wide text-white
        transition-colors duration-200 transform bg-blue-500 rounded-md
        hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring
        focus:ring-blue-300 focus:ring-opacity-50" %>
      </div>
      <% end %>

      <div class="mt-2"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
