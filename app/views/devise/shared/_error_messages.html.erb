<% if resource.errors.any? %>
  <div data-controller="visibility">
    <div
      data-visibility-target="hideable"
      class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 relative"
      role="alert"
      id="error_explanation"
    >
      <button
        data-action="visibility#hideTargets"
        class="absolute top-0 bottom-0 right-0 px-3 py-4"
        type="button"
      >
        <svg
          class="fill-current h-6 w-6 text-red-500"
          role="button"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
        >
          <title>Close</title>
          <path
            d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"
          />
        </svg>
      </button>
      <h2 class="font-bold">
        <%= I18n.t("errors.messages.not_saved", count: resource.errors.count,
        resource: resource.class.model_name.human.downcase) %>
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>

        <% end %>
      </ul>
    </div>
  </div>
<% end %>
